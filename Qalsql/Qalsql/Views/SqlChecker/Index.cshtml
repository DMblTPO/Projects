@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    ViewBag.Title = "Index";
}

<h2>@ViewBag.Title</h2>

<p>Enter your sql query:</p>

<p>
    @using (Html.BeginForm("SendSql", "SqlChecker", FormMethod.Post, new { role = "form" }))
    {
        <div class="form-horizontal">
            <div class="form-group">

                @Html.TextArea("sql", new { rows = 10, cols = 100, @class = "form-control" })

            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Send" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
</p>