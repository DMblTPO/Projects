@model List<Qalsql.Models.HwExercise>

@{
    ViewBag.Title = "SQL Tasks";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Tasks</h2>

<div class="container">
    <div class="panel-group" id="accordion">

        @foreach (var exe in Model)
        {
            var href = "collapse" + exe.ExerciseNum;

            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4 class="panel-title">
                        <a data-toggle="collapse" data-parent="#accordion" href="#@href">Task #@exe.ExerciseNum</a>
                    </h4>
                </div>
                <div id="@href" class="panel-collapse collapse">
                    <div class="panel-body">
                        @using (Html.BeginForm())
                        {
                            <div class="form-horizontal">
                                <div>@exe.Conditions</div>
                                <textarea></textarea>
                                <div class="col-md-10">
                                    <input type="submit" value="Send" class="btn btn-default" />
                                </div>
                            </div>
                        }
                        <div class="panel-footer"></div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

